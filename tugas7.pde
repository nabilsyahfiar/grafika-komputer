void draw()
{
  background(255);
  int a = second();
  int ab = 25*a;
  fill(255, 0, 0); arc(256, 256, 300, 300, ((315-ab)*PI)/180, ((360-ab)*PI)/180);
  fill(245, 0, 0); arc(256, 256, 300, 300, ((270-ab)*PI)/180, ((315-ab)*PI)/180);
  fill(235, 0, 0); arc(256, 256, 300, 300, ((225-ab)*PI)/180, ((270-ab)*PI)/180);
  fill(225, 0, 0); arc(256, 256, 300, 300, ((180-ab)*PI)/180, ((225-ab)*PI)/180);
  fill(215, 0, 0); arc(256, 256, 300, 300, ((135-ab)*PI)/180, ((180-ab)*PI)/180);
  fill(205, 0, 0); arc(256, 256, 300, 300, ((90-ab)*PI)/180, ((135-ab)*PI)/180);
  fill(195, 0, 0); arc(256, 256, 300, 300, ((45-ab)*PI)/180, ((90-ab)*PI)/180);
  fill(185, 0, 0); arc(256, 256, 300, 300, ((0-ab)*PI)/180, ((45-ab)*PI)/180);
}
